package labtest2;

import java.util.Scanner;

public class LabTest2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner scan = new Scanner (System.in);
		int student1 = 0,student2,student3;

		        System.out.print("Enter the mark (0-100) for student 1: ");
		        student1 = scan.nextInt();
		        
				while((student1<0) || (student1>100)) {
					System.out.println("Invalid input, please try again....");
					System.out.print("Enter the mark (0-100) for student 1: ");
					student1 = scan.nextInt();
					
			  }
				System.out.print("Enter the mark (0-100) for student 2: ");
				student2 = scan.nextInt();
				while((student2<0) || (student2>100)) {
					
					System.out.println("Invalid input, please try again....");
					System.out.print("Enter the mark (0-100) for student 2: ");
					student2 = scan.nextInt();
					
				}
				System.out.print("Enter the mark (0-100) for student 3: ");
				student3 = scan.nextInt();
				
				while((student3<0) || (student3>100)) {
					System.out.println("Invalid input, please try again....");
					System.out.print("Enter the mark (0-100) for student 3: ");
					student3 = scan.nextInt();
				}
				

				double avg = (double)(student1 + student2 + student3) /3;
				System.out.printf("The average is: %.2f" ,avg);
			
	    
	          
	}

}

